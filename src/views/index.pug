doctype html
html
    head
        meta(charset='utf-8')
        title="GSW Class Registration Service"
        link(href='/css/main.css', rel='stylesheet')
    body
        div.wrapper
            div.signin
                form(action='/signin' method='post')
                    p
                        input(type='text' name='id' placeholder="name@email.com")
                        input(type='password' name='password' placeholder="password")
                        input(type='submit' value="Sign In")
                    p
                        a(href="findpw") Forgot Password?
            div.signup
                h1 Sign Up!
                form(action='/signup' method='post')
                    p
                        input(type='text' name='id' placeholder="name@email.com")
                        input(type='text' name='Level' placeholder="Course Level")
                        input(type='text' name='Starting Year' placeholder="Starting Year")
                    p
                        input(type='password' name='password' placeholder="password")
                        input(type='password' name='password' placeholder="Confirm password")
                        input(type='text' name='Major' placeholder="Major")
                    p
                        input(type='text' name='Last Name' placeholder="Input your Last Name")
                        input(type='text' name='First Name' placeholder="Input your First Name")
                        input(type='submit' value="Sign Up").submit

